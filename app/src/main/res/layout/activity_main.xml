<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/gredient9"
        android:id="@+id/tool_layout3"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/bluetooth" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/icon"
            android:layout_height="wrap_content"
            android:text="Bluetooth App"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/changeLanguageButton"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gredient2"
        android:layout_marginTop="60dp"
        android:layout_height="match_parent">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tool_layout3"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/enableBluetoothButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Turn On Bluetooth"
            />

        <Button
            android:id="@+id/showNearbyDevicesButton"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/enableBluetoothButton"
            android:text="Discover Devices"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/deviceListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginTop="16dp"/>
    <ProgressBar
        android:id="@+id/discoveryProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
